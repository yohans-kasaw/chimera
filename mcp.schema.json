{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chimera.local/schemas/mcp.schema.json",
  "title": "Chimera MCP Configuration",
  "type": "object",
  "additionalProperties": false,
  "required": ["mcp_version", "config_version", "project", "servers"],
  "properties": {
    "$schema": {"type": "string"},
    "mcp_version": {"type": "string"},
    "config_version": {"type": "string"},
    "project": {"type": "string"},
    "description": {"type": "string"},
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "request_timeout_ms": {"type": "integer", "minimum": 1},
        "connect_timeout_ms": {"type": "integer", "minimum": 1},
        "retries": {"type": "integer", "minimum": 0}
      }
    },
    "servers": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {"$ref": "#/$defs/server"}
    }
  },
  "$defs": {
    "server": {
      "type": "object",
      "additionalProperties": false,
      "required": ["description", "transport", "tools", "documentation_url"],
      "properties": {
        "description": {"type": "string"},
        "transport": {"type": "string", "enum": ["stdio", "http"]},
        "stdio": {
          "type": "object",
          "additionalProperties": false,
          "required": ["command", "args"],
          "properties": {
            "command": {"type": "string"},
            "args": {"type": "array", "items": {"type": "string"}},
            "cwd": {"type": "string"}
          }
        },
        "http": {
          "type": "object",
          "additionalProperties": false,
          "required": ["url"],
          "properties": {
            "url": {"type": "string"},
            "headers": {"type": "object", "additionalProperties": {"type": "string"}}
          }
        },
        "auth": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "required", "optional"],
          "properties": {
            "type": {"type": "string", "enum": ["none", "env", "headers"]},
            "required": {"type": "array", "items": {"type": "string"}},
            "optional": {"type": "array", "items": {"type": "string"}},
            "notes": {"type": "string"}
          }
        },
        "upstreams": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": ["name", "type"],
            "properties": {
              "name": {"type": "string"},
              "type": {"type": "string"},
              "base_url_env": {"type": "string"},
              "notes": {"type": "string"}
            }
          }
        },
        "tools": {
          "type": "array",
          "minItems": 1,
          "items": {"$ref": "#/$defs/tool"}
        },
        "documentation_url": {"type": "string"}
      },
      "allOf": [
        {
          "if": {"properties": {"transport": {"const": "stdio"}}},
          "then": {"required": ["stdio"]}
        },
        {
          "if": {"properties": {"transport": {"const": "http"}}},
          "then": {"required": ["http"]}
        }
      ]
    },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "description", "input_schema", "output_schema"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_\\-]{0,63}$"
        },
        "description": {"type": "string"},
        "input_schema": {"type": "object"},
        "output_schema": {"type": "object"}
      }
    }
  }
}
